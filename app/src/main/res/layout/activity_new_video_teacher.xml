<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.musicmentor.musicmentor.NewVideoTeacher">

    <Button
        android:id="@+id/buttonFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoFeedbackTeacher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:text="Submit" />

    <VideoView
        android:id="@+id/videoViewTeacher"
        android:layout_width="wrap_content"
        android:layout_height="381dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/videoFeedbackTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Feedback"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/videoViewTeacher"
        android:layout_alignRight="@+id/buttonFeedback"
        android:layout_alignEnd="@+id/buttonFeedback" />

    <Button
        android:text="Use Audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/videoFeedbackTeacher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnSwitchRecordingMethod" />

    <Button
        android:text="Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/videoFeedbackTeacher"
        android:layout_alignStart="@+id/videoFeedbackTeacher"
        android:id="@+id/btnRecordAudio" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/videoFeedbackTeacher"
        android:layout_alignEnd="@+id/videoFeedbackTeacher"
        android:id="@+id/btnStopAudio" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlayAudio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>