<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicmentor.musicmentor">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoActivity"
            android:label="@string/title_activity_video"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePageTeacher"
            android:label="@string/title_activity_home_page_teacher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePageStudent"
            android:label="@string/title_activity_home_page_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePageStudentActivity"
            android:label="@string/title_activity_home_page_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewVideoStudent"
            android:label="@string/title_activity_new_video_student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainTeacherActivity"
            android:label="@string/title_activity_main_teacher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewVideoTeacher"
            android:label="@string/title_activity_new_video_teacher"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePageTeacherActivity"
            android:label="@string/title_activity_home_page_teacher"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>